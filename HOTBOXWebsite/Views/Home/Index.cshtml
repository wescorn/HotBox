                    }
                } 

                document.getElementById("BStartTid").value = input.value;
                document.getElementById("BSlutTid").value = input.value;

            } else {
                document.getElementById("Opretbtn").disabled = false;
                document.getElementById("ProNavn").value = "";
            }
        }

</script>
