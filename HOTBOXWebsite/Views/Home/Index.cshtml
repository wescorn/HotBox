@model   HOTBOXWebsite.Models.ProjectOverviewViewModel

@{
    ViewBag.Title = "Main";
}



<h2>Main</h2>



<div style="border: 2px solid black">
   @using (Html.BeginForm("Index", "Home", FormMethod.Get)) {
        <select name="id" onchange="this.form.submit()">
        <option value="Select">Select</option>
        @foreach (var item in Model.projects)
        {
            if (Model.SelectedProject != null && Model.SelectedProject.Id == item.Id)
            {
                <option value="@item.Id" selected="selected">@item.project.ProjectName</option>
            }
            else
            {
                <option value="@item.Id">@item.project.ProjectName</option>
            }

        }
    </select>
   }

    <table style="width:100%">
        @using (Html.BeginForm("CreateProject", "Home", FormMethod.Post))
            {
            <tr><td width="40%"><B>Set-Værdier</B></td></tr>
            <tr><td>Projektnavn: </td><td><input id="ProNavn" type="text" name="projektnavn"></td></tr>


                <tr><td>Starttidspunkt: </td><td><div class="input-group">@Html.EditorFor(model => model.SelectedProject.project.StartTime, new { htmlAttributes = new { @class = "form-control datetimepicker" } }) <span class="input-group-addon"> <span class="glyphicon glyphicon-calendar"></span></span> </div></td></tr>

               
                
                 <tr><td>Sluttidspunkt: </td><td><div class="input-group">@Html.EditorFor(model => model.SelectedProject.project.EndTime, new { htmlAttributes = new { @class = "form-control datetimepicker" } }) <span class="input-group-addon"> <span class="glyphicon glyphicon-calendar"></span></span> </div></td></tr>
              
                 
                   <tr><td colspan="5" align="right"> <input id="Opretbtn" type="submit" value="Opret projekt"> </td></tr>
        }

    </table>
</div>
<div style="border: 2px solid black">
    <table style="width:100%">

        <tr><td width="40%"><B>Beregninger</B></td></tr>
        <tr><td>Areal af testemne: </td><td><input id="BAreal" type="text" name="Areal" style="background-color: #008215" onchange="OnArealChange(this);"></td></tr>
        <tr><td>Beregnings starttidspunkt: </td><td> @Html.DisplayFor(model => @Model.SelectedProject.project.ProjectCalculations.StartTime) </td> </tr>
        <tr><td>Beregnings sluttidspunkt: </td><td>@Html.DisplayFor(model => @Model.SelectedProject.project.ProjectCalculations.EndTime) </td> </tr>
        <tr><td>Testtid: </td><td> @Html.DisplayFor(model => @Model.SelectedProject.project.ProjectCalculations.TestTimeHours) </td></tr>
        <tr><td>Testtid: </td><td> @Html.DisplayFor(model => @Model.SelectedProject.project.ProjectCalculations.TestTimeSeconds) </td></tr>
        <tr><td>Gennemsnitlig temperaturforskel mellem box 1 og box 2: </td><td>@Html.DisplayFor(model => @Model.SelectedProject.project.ProjectCalculations.AverageTemp) </td></tr>
        <tr><td>Effektforbrug (målerstand) ved starttidspunkt: </td><td>@Html.DisplayFor(model => @Model.SelectedProject.project.ProjectCalculations.PowerConsumptionStart) </td></tr>
        <tr><td>Effektforbrug (målerstand) ved sluttidspunkt: </td><td>@Html.DisplayFor(model => @Model.SelectedProject.project.ProjectCalculations.PowerConsumptionEnd) </td></tr>
        <tr><td>Effektforbrug i beregningsperioden: </td><td> @Html.DisplayFor(model => @Model.SelectedProject.project.ProjectCalculations.PowerConsumptionDifference) </td></tr>
        <tr><td>Testemnets transmissionskoefficient: </td><td></td></tr>

    </table>
</div>

<div class="input-group">
    @Html.EditorFor(model => model.SelectedProject.project.StartTime, new { htmlAttributes = new { @class = "form-control datetimepicker" } })
    <span class="input-group-addon">
        <span class="glyphicon glyphicon-calendar"></span>
    </span>
</div>

@section scripts
{
    <script type="text/javascript">

       $(document).ready(function () {
            console.log('ost');
            $('.datetimepicker').datetimepicker();
       });



    </script>
}